doctype html 
html
    head 
        title Loto app ♡
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/css/global.css")
    body 
        .container.mt-5
            h1 Zaigraj Loto 6/45 i osvoji nagrade 
            if isAuthenticated 
                .box.p-4.mb-4.rounded-3.shadow
                    p Welcome #{user.nickname || user.name} 
                    p Email: #{user.email}
                    a.btn.btn-outline-secondary(href="/logout") Log out
            else 
                a.btn.btn-custom(href="/login") Log in
            
            if current_round 
                .box
                    h3.my-3 Trenutno kolo - broj uplaćenih listića: #{noOfTickets}
                    if !is_active
                        p Kolo je neaktivno - uplate su zatvorene
                        if drawn_numbers    
                            p Izvučeni su brojevi #{drawn_numbers}
                        else 
                            p Brojevi za trenutno kolo još nisu izvučeni
                    else    
                        p Kolo je aktivno - uplati listić 
                        a.btn.btn-custom.w-25.d-flex.justify-content-center.mt-2(href="/play-ticket") Uplati
                