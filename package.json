{
	"name": "loto-app",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"build": "npm run clean && tsc && npm run copy-files",
		"clean": "shx rm -rf dist",
		"copy-files": "shx cp -r src/views dist && shx cp -r src/public dist",
		"start": "node dist/server.js"
	},
	"dependencies": {
		"code": "^5.2.4",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"pg": "^8.16.3",
		"qr": "^0.5.2",
		"qrcode": "^1.5.4",
		"shx": "^0.4.0",
		"ts-node": "^10.9.2"
	},
	"devDependencies": {
		"@types/express": "^5.0.4",
		"@types/node": "^24.9.1",
		"@types/pg": "^8.15.5",
		"@types/qrcode": "^1.5.6",
		"nodemon": "^3.1.10",
		"typescript": "^5.9.3"
	}
}
